{
  "compilerOptions": {
    "lib": ["es2019", "es2020"],
    "allowJs": true,
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "./src/**/__fixtures__/*", "./src/**/*.test.ts"]
}
